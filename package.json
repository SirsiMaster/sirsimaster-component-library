{
  "name": "@sirsimaster/component-library",
  "version": "1.0.0",
  "description": "Universal Component Library for all SirsiMaster projects - UI components, CI/CD pipelines, and development tools",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "cat ui-components/**/*.css > ui-components/dist/sirsimaster-ui.css",
    "build:js": "echo '// SirsiMaster UI Components' > ui-components/dist/sirsimaster-ui.js",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write .",
    "setup": "node cicd-pipelines/scripts/setup-pipeline.js",
    "playground": "npx serve playground",
    "version": "npm run build && git add -A dist",
    "postversion": "git push && git push --tags"
  },
  "bin": {
    "sirsimaster-setup": "./cicd-pipelines/scripts/setup-pipeline.js",
    "sirsimaster-init": "./development-tools/scripts/init-project.js",
    "sirsimaster-add": "./development-tools/scripts/add-component.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sirsimaster/component-library.git"
  },
  "keywords": [
    "ui-components",
    "component-library",
    "design-system",
    "cicd",
    "deployment",
    "firebase",
    "aws",
    "azure",
    "sirsimaster",
    "reusable",
    "universal"
  ],
  "author": "SirsiMaster Development Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sirsimaster/component-library/issues"
  },
  "homepage": "https://github.com/sirsimaster/component-library#readme",
  "files": [
    "ui-components/",
    "cicd-pipelines/",
    "development-tools/",
    "design-system/",
    "documentation/",
    "WARP.md",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "vue": ">=2.6.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "not dead"
  ]
}
